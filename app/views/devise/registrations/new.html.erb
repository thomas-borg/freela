<div class="container py-3">
  <h2>Sign up</h2>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "given-name", style: 'margin-bottom: 20px;' } %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "family-name", style: 'margin-bottom: 20px;' } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" }, style: 'margin-bottom: 20px;' %>
      <%= f.input :skills,
                  as: :string,
                  input_html: { placeholder: 'Enter your skills', style: 'margin-bottom: 20px;' } %>
      <%= f.input :about,
                  required: false,
                  input_html: { autocomplete: "off" }, style: 'margin-bottom: 20px;' %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", style: 'margin-bottom: 20px;' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", style: 'margin-bottom: 20px;' } %>
    </div>

    <div class="form-actions my-4">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>
